[colors]
background = #1F242F
background-alt = #2F343F
foreground = ${xrdb:color7:#eee}
foreground-alt = ${xrdb:color15:#eee}
primary = ${xrdb:color2:#e3be8c}
secondary = ${xrdb:color3:#ebcb8b}
alert = #d08770
error = ${xrdb:color1:#bf616a}


[settings]
screenchange-reload = true


[global/wm]
margin-top = 5
margin-bottom = 5


[bar/default]
monitor = ${env:MONITOR:HDMI-0}
width = 100%
height = 38
offset-x = 0%
offset-y = 4px
radius = 18.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #bf616a

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = Iosevka Fixed Curly:style=Medium:size=12
font-1 = Symbola:style=Regular:size=12
font-2 = FontAwesome 5 Free:style=Solid:size-12;3

wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize


[bar/layouts]
font-0 = Noto:style=Regular:size=10
inherit = bar/default
offset-x = 0px
width = ${env:LAYOUT_SIZE}

modules-left = bspwm
foreground = #d8dee9
background = #00000000


[bar/top]
inherit = bar/default
width = ${env:TOP_SIZE}
offset-x = ${env:LAYOUT_SIZE}

modules-left = mocp
modules-center = xwindow
modules-right = pulseaudio pulsemixer xkeyboard date mainmenu winlist powermenu


[bar/tray]
inherit = bar/default
width = ${env:TRAY_SIZE}
offset-x = ${env:TRAY_OFFSET}

modules-center = empty
background = #00000000

tray-position = center
tray-padding = 10
tray-background = #00000000


[module/empty]
type = custom/text
content = " "


[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%


[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

label-layout = " %layout%"
label-indicator-foreground = ${colors.alert}


[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-foreground = #BF616A
label-focused-background = #00000000
label-focused-padding = 2

label-occupied = %name%
label-occupied-padding = 2

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %name%
label-empty-foreground = #84828A
label-empty-padding = 2


[module/date]
type = internal/date
interval = 5

date =
date-alt = "%Y-%m-%d "
time = "%H:%M"
time-alt = "%H:%M:%S"
label = " %date%%time%"


[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = VOL %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = 🔇 muted
label-muted-foreground = ${xrdb:color9:#4c566a}

bar-volume-width = 10
bar-volume-foreground-0 = ${xrdb:color10:#a3be8c}
bar-volume-foreground-1 = ${xrdb:color10:#a3be8c}
bar-volume-foreground-2 = ${xrdb:color10:#a3be8c}
bar-volume-foreground-3 = ${xrdb:color10:#a3be8c}
bar-volume-foreground-4 = ${xrdb:color10:#a3be8c}
bar-volume-foreground-5 = ${xrdb:color11:#ebcb8b}
bar-volume-foreground-6 = ${xrdb:color1:#d08770}
bar-volume-foreground-7 = ${xrdb:color1:#bf616a}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}


[module/mainmenu]
type = custom/script
format = <label>
format-foreground = ${xrdb:color4:#515D73}
exec = echo -e ""
tail = false
click-left = rofi -show run


[module/winlist]
type = custom/script
format = <label>
format-foreground = ${xrdb:color4:#515D73}
exec = echo -e ""
tail = false
click-left = rofi -show window


[module/powermenu]
type = custom/script
format = <label>
format-foreground = ${xrdb:color1:#ebcb8b}
exec = echo -e ""
tail = false
click-left = rofi_power_menu &


[module/pulsemixer]
type = custom/script
format = <label>
format-foreground = ${xrdb:color1:#ebcb8b}
exec = echo -e ""
tail = false
click-left = pulsemixer.sh &


[module/mocp]
type = custom/script
label = %output:0:50:...%
format = <label>
format-prefix = ""
format-foreground = ${xrdb:color7:#d8dee9}
exec = mocp.sh info
tail = true
interval = 2.5
click-left = mocp.sh &
