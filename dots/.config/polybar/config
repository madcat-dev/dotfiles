[colors]
background = #00000000
background-alt = ${xrdb:color0}
foreground = ${xrdb:color7}
foreground-alt = ${xrdb:color15}
primary = ${xrdb:color2}
secondary = ${xrdb:color3}
alert = #d08770
error = ${xrdb:color1}


[settings]
screenchange-reload = true


[global/wm]
margin-top = 5
margin-bottom = 5


[bar/default]
monitor = ${env:MONITOR:HDMI-0}
width = 100%
height = 38
offset-x = 0%
offset-y = 4px
radius = 18.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.foreground}

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = Iosevka Fixed Curly:style=Medium:size=12
font-1 = Symbola:style=Regular:size=12
font-2 = FontAwesome 5 Free:style=Solid:size-12;3

wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize

[bar/main]
inherit = bar/default
offset-x = 0px
width = 100%

foreground = ${colors.foreground}
background = ${colors.background}

modules-left = bspwm mocp
modules-center = xwindow
modules-right = pulseaudio pulsemixer xkeyboard date mainmenu winlist powermenu

tray-position = right
tray-padding = 10
tray-background = ${colors.background}


[module/empty]
type = custom/text
content = " "


[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%


[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

label-layout = "ï„œ %layout%"
label-indicator-foreground = ${colors.alert}


[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-foreground = ${xrdb:color1}
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${xrdb:color6}
label-empty-padding = 1


[module/date]
type = internal/date
interval = 5

date =
date-alt = "%Y-%m-%d "
time = "%H:%M"
time-alt = "%H:%M:%S"
label = "ï³ %date%%time%"


[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = VOL %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = ğŸ”‡ muted
label-muted-foreground = ${xrdb:color1}

bar-volume-width = 10
bar-volume-foreground-0 = ${xrdb:color10}
bar-volume-foreground-1 = ${xrdb:color10}
bar-volume-foreground-2 = ${xrdb:color10}
bar-volume-foreground-3 = ${xrdb:color10}
bar-volume-foreground-4 = ${xrdb:color10}
bar-volume-foreground-5 = ${xrdb:color11}
bar-volume-foreground-6 = ${xrdb:color1}
bar-volume-foreground-7 = ${xrdb:color1}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = â”€
bar-volume-fill-font = 2
bar-volume-empty = â”€
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}


[module/mainmenu]
type = custom/script
format = <label>
format-foreground = ${xrdb:color4}
exec = echo -e "ï€º"
tail = false
click-left = rofi -show run


[module/winlist]
type = custom/script
format = <label>
format-foreground = ${xrdb:color4}
exec = echo -e "ï‹’"
tail = false
click-left = rofi -show window


[module/powermenu]
type = custom/script
format = <label>
format-foreground = ${xrdb:color1}
exec = echo -e "ï€‘"
tail = false
click-left = rofi_power_menu &


[module/pulsemixer]
type = custom/script
format = <label>
format-foreground = ${xrdb:color1}
exec = echo -e "ï€¥"
tail = false
click-left = pulsemixer.sh &


[module/mocp]
type = custom/script
label = %output:0:50:...%
format = <label>
format-prefix = "ï€"
format-foreground = ${xrdb:color7}
exec = mocp.sh info
tail = true
interval = 2.5
click-left = mocp.sh &
