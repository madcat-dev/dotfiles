[colors]
background = ${xrdb:nord_polar0:#222}
background-alt = ${xrdb:nord_polar1:#222}
foreground = ${xrdb:nord_snow1:#eee}
foreground-alt = ${xrdb:nord_snow0:#eee}
primary = ${xrdb:nord_green:#e3be8c}
secondary = ${xrdb:nord_yellow:#ebcb8b}
alert = ${xrdb:nord_orange:#d08770}
error = ${xrdb:nord_red:#bf616a}


[settings]
screenchange-reload = true


[global/wm]
margin-top = 5
margin-bottom = 5


[bar/default]
monitor = ${env:MONITOR:HDMI-0}
width = 100%
height = 38
offset-x = 0%
offset-y = 4px
radius = 16.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #bf616a

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = Iosevka Fixed Curly:style=Medium:size=12
font-1 = Symbola:style=Regular:size=12
font-2 = FontAwesome 5 Free:style=Solid:size-12;3

wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize


[bar/layouts]
font-0 = Noto:style=Regular:size=10
inherit = bar/default
width = 12%

modules-left = bspwm
foreground = #d8dee9
background = #00000000


[bar/top]
inherit = bar/default
width = 74%
offset-x = 13%

modules-left = mocp
modules-center = xwindow
modules-right = pulseaudio pulsemixer xkeyboard date powermenu


[bar/tray]
inherit = bar/default
width = 12%
offset-x = 88%

modules-center = empty
background = #00000000

tray-position = center
tray-padding = 10
tray-background = #00000000


[module/empty]
type = custom/text
content = " "


[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%


[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

label-layout = %layout%
label-layout-underline = ${colors.secondary}
label-indicator-foreground = ${colors.alert}


[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-foreground = #4c566a
label-focused-background = #00000000
label-focused-padding = 2

label-occupied = %name%
label-occupied-padding = 2

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %name%
label-empty-foreground = #b8bec9
label-empty-padding = 2


[module/date]
type = internal/date
interval = 5

date =
date-alt = "%Y-%m-%d "
time = "%H:%M"
time-alt = "%H:%M:%S"

format-underline = ${xrdb:nord_aurora3:#a3be8c}
label = %date%%time%


[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = VOL %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = 🔇 muted
label-muted-foreground = ${xrdb:nord_frost3:#4c566a}

bar-volume-width = 10
bar-volume-foreground-0 = #a3be8c
bar-volume-foreground-1 = #a3be8c
bar-volume-foreground-2 = #a3be8c
bar-volume-foreground-3 = #a3be8c
bar-volume-foreground-4 = #a3be8c
bar-volume-foreground-5 = #ebcb8b
bar-volume-foreground-6 = #d08770
bar-volume-foreground-7 = #bf616a
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}


[module/powermenu]
type = custom/script
format = <label>
format-foreground = ${xrdb:nord_orange:#ebcb8b}
exec = echo ""
tail = false
click-left = ~/.config/polybar/power.sh &


[module/pulsemixer]
type = custom/script
format = <label>
format-foreground = ${xrdb:nord_frost3:#ebcb8b}
format-underline = ${xrdb:nord_frost2:#0a6cf5}
exec = echo "PM"
tail = false
;click-left = urxvt -e pulsemixer
click-left = ~/.config/polybar/pulsemixer.sh &


[module/mocp]
type = custom/script
label = %output:0:50:...%
format = <label>
format-prefix = ""
format-foreground = ${xrdb:nord_snow0:#d8dee9}
exec = ~/.config/polybar/mocp.sh info
tail = true
interval = 2.5
click-left = ~/.config/polybar/mocp.sh &
